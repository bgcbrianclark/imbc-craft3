{% extends 'layouts/default' %}

{% block main %}

{% include 'blocks/pageTitle' %}
{% include 'blocks/pageIntro' %}

<section class="block contact-form">
  <form action="">
    <div class="card form-card">
      <h2>Contact Information</h2>
      <div class="input-group">
        <div class="input full"><input type="text"><label for="">Your Name</label></div>
      </div>

      <div class="input-group">
        <div class="input"><input type="text"><label for="">Contact Phone</label></div>
        <div class="input"><input type="text"><label for="">Contact Email</label></div>
      </div>
    </div>

    <div class="card form-card">
      <h2>Business Information</h2>
      <div class="input-group">
        <div class="input"><input type="text"><label for="">Business Name</label></div>
        <div class="input"><input type="text"><label for="">Business Website URL</label></div>
      </div>
    </div>

    <div class="card form-card">
      <h2>Additional Information</h2>
      <div class="input-group">
      <div class="full textarea"><label for="">How did you hear about me?</label><textarea name="" id="" rows="5"></textarea></div>
      </div>
      <div class="input-group">
      <div class="full textarea"><label for="">Share an introduction to your idea or business, or share any additional comments or questions.</label><textarea name="" id="" rows="5"></textarea></div>
      </div>
    </div>

    <div class="submit">
      <p class="captcha-notice">This site is protected by reCAPTCHA and the Google Privacy Policy and Terms of Service apply.</p>
      <input type="submit" class="btn" value="Submit Form">
    </div>
  </form>
</section>


{% endblock %}
